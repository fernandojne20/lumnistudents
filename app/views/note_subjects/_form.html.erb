<%= form_for @note_subject, :html => { :class => "form-horizontal note_subject" } do |f| %>

  <% if @note_subject.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@note_subject.errors.count, "error") %> prohibited this note_subject from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @note_subject.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label :subject_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :subject_id, @subjects.collect{|c| [c.name, c.id]}, {}, :class => 'form-control select2'%>
    </div>
    <%=f.error_span(:subject_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                note_subjects_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
