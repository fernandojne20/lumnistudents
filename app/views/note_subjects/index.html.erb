<%- model_class = NoteSubject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:subject_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @note_subjects.each do |note_subject| %>
      <tr>
        <td><%= link_to note_subject.id, note_subject_path(note_subject) %></td>
        <td><%= note_subject.value %></td>
        <td><%= note_subject.subject.name %></td>
        <td><%= note_subject.user.name %></td>
        <td><%=l note_subject.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      note_subject_path(note_subject), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_note_subject_path(note_subject), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      note_subject_path(note_subject),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_note_subject_path,
            :class => 'btn btn-primary' %>
